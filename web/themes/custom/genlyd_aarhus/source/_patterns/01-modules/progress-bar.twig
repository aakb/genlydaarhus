{#
/**
 * @file
 * Progress bar
 *
 * Available variables:
 * - progressBar: The progressBar data.
 *   - items: Array of progress bar elements.
 *     - #active: Is the element active?
 *     - #title: Element title
 *     - #href: Link to the step.
 *     - #open: Is the link open for click?
 */
#}

<div class="progress-bar">
  <ul class="progress-bar--list">
    {% for item in progressBar.items %}

      {% if item['#title'] %}
        {% if not item['#active'] and item['#open'] %}
          <li class="progress-bar--list-item progress-bar--with-link {{ item['#active'] ? 'is-active' }}">
            {{ form.actions.submitStep[loop.index - 1] }}
          </li>
        {% else %}
          <li class="progress-bar--list-item {{ item['#active'] ? 'is-active' }} {{ item['#open'] != true ? 'is-not-open' }}">
            <input type="submit" disabled="disabled" class="progress-bar--submit" value="{{ loop.index ~ '. ' ~ item['#title'] }}">
          </li>
        {% endif %}
      {% endif %}
    {% endfor %}
  </ul>
</div>
