{% embed "@modules/grid/grid-full.twig" %}
  {% block items %}
    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% embed "@modules/grid/grid-item-header-section.twig" %}
          {% block content %}
            {% embed "@modules/grid/grid-halfs.twig" %}
              {% block items %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {% include "@modules/heading-with-icon.twig" %}
                  {% endblock %}
                {% endembed %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {% include "@elements/buttons/button-call-to-action.twig" with { button: { title: buttons.showMap }, jsClass: "js-maps-switch" } %}
                  {% endblock %}
                {% endembed %}
              {% endblock %}
            {% endembed %}
          {% endblock %}
        {% endembed %}
      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}

{% embed "@modules/grid/grid-fourths.twig" %}
  {% block items %}
    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include "@elements/buttons/button-call-to-action.twig" with { button: { title: buttons.showFilters }, jsClass: "js-filters-toggle" } %}
      {% endblock %}
    {% endembed %}
    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include "@elements/buttons/button-call-to-action.twig" with { button: { title: buttons.myLocation }, jsClass: "activities-top--my-location js-maps-my-location" } %}
      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}

{% embed "@modules/grid/grid-full.twig" with { class: 'js-all-filters' } %}
  {% block items %}
    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include "@modules/filters.twig" %}
      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}
