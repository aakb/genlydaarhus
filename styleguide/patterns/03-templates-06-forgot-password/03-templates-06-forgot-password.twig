{% embed "page.twig" %}
  {% block main %}
  <div class="container has-large-spacing">
    <div class="l-heading-section">
      {% include 'modules-heading-with-icon' with { headingWithIcon: forgotPassword.headingWithIcon, icon: forgotPassword.headingWithIcon.icon } %}
    </div>

    <div class="l-cols">
      <div class="l-col half tablet-up">
        <div class="l-section has-bottom-margin is-tight">
          {% include "elements-form-label" with { formLabel: { label: "Indtast email" } } %}
          {% include "elements-text-field" with {'type': 'text', 'name': 'username' } %}
        </div>
      </div>
    </div>

    <div class="l-section has-no-margin is-tight">
      <div class="l-section has-bottom-margin is-tight layout flex">
        {% include "elements-button-call-to-action" with { button: forgotPassword.button } %}
      </div>
    </div>
  </div>
  {% endblock %}
{% endembed %}