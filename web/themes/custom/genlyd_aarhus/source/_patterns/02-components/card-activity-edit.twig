{% embed "@modules/cards/card.twig" %}
  {% block header %}
    {% include "@modules/cards/card-header.twig" with { cardHeader: cardActivity.cardHeader } %}
  {% endblock %}
  {% block info %}
    {% include "@modules/cards/card-info.twig" with { class: "has-spacing", cardInfo: cardActivity.cardInfo } %}
  {% endblock %}
  {% block footer %}
    {% include "@modules/cards/card-actions.twig" with { class: "has-padding", cardActions: cardActivity.cardActions } %}
  {% endblock %}
{% endembed %}
