<div class="contact-information {{ contactInformationClass }}">
  <div class="contact-information--info-block">
    {% include "@elements/icons/icon.twig" with { icon: { type: "chevron-small", class: "is-xtiny is-green-dark has-small-margin", color: "light" } } %}
    <div class="contact-information--text">
      <p class="contact-information--meta">{{ contactInformation.contactLabel }}</p>
      <p class="contact-information--info">{{ contactInformation.contact }}</p>
    </div>
  </div>
  <div class="contact-information--info-block">
    {% include "@elements/icons/icon.twig" with { icon: { type: "chevron-small", class: "is-xtiny is-green-dark has-small-margin", color: "light" } } %}
    <div class="contact-information--text">
      <p class="contact-information--meta">{{ contactInformation.phoneLabel }}</p>
      <p class="contact-information--info">{{ contactInformation.phone }}</p>
    </div>
  </div>
  <div class="contact-information--info-block">
    {% include "@elements/icons/icon.twig" with { icon: { type: "chevron-small", class: "is-xtiny is-green-dark has-small-margin", color: "light" } } %}
    <div class="contact-information--text">
      <p class="contact-information--meta">{{ contactInformation.emailLabel }}</p>
      <p class="contact-information--info"><a href="mailto:{{ contactInformation.email }}" title="{{ contactInformation.emailTitle }}">{{ contactInformation.email }}</a></p>
    </div>
  </div>
</div>
