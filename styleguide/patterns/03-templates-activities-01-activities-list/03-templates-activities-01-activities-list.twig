{% embed "@layouts/page.twig" %}
  {% block hero %}{% endblock %}
  {% block main %}
  <div class="container has-large-spacing">

    <div class="l-heading-section no-spacing">
      {% include 'modules-heading-with-icon' with { headingWithIcon: activityList.headingWithIcon, icon: activityList.headingWithIcon.icon } %}
      {% include 'modules-activity-action' with { activityAction: activityList.activityAction, button: activityList.activityAction.button } %}
    </div>

    <div class="l-section has-bottom-margin">
      {% include "modules-filters" %}
    </div>

    {% embed "@layouts/grid-fourths.twig" %}
      {% block items %}
        {% for item in activities %}
          <article class="grid--item">
          {% include "components-card-activity" with { cardActivity: item } %}
          </article>
        {% endfor %}
      </div>
      {% endblock %}
    {% endembed %}

  </div>
  {% endblock %}
{% endembed %}
