{% embed "@layouts/grid-full.twig" %}
  {% block items %}

    {% embed "@layouts/grid-item.twig" %}
      {% block content %}

        {% include "@modules/activity-hero.twig" with { activityHero: activity.activityHero } %}

      {% endblock %}
    {% endembed %}

  {% endblock %}
{% endembed %}

{% embed "@layouts/grid-two-thirds.twig" %}
  {% block items %}

    {% embed "@layouts/grid-item.twig" %}
      {% block content %}

        {% embed "@layouts/grid-full.twig" %}
          {% block items %}

            {% embed "@layouts/grid-item.twig" %}
              {% block content %}
                {% include "@modules/text-with-icon.twig" with { textWithIcon: activity.activityOverview.headingWithIconDescription } %}
              {% endblock %}
            {% endembed %}

            {% embed "@layouts/grid-item.twig" %}
              {% block content %}
                {% for category in activity.activityOverview.categories %}
                  {% include "@elements/category.twig" with { category: { text: category } } %}
                {% endfor %}
              {% endblock %}
            {% endembed %}

            {% embed "@layouts/grid-item.twig" %}
              {% block content %}
                {{ activity.activityOverview.body }}

                {% include "@components/important-info.twig" with { info: activity.activityOverview.info } %}
              {% endblock %}
            {% endembed %}

          {% endblock %}
        {% endembed %}

      {% endblock %}
    {% endembed %}

    {% embed "@layouts/grid-item.twig" %}
      {% block content %}
        {% include "@modules/text-with-icon.twig" with { textWithIcon: activity.activityOverview.headingWithIconDetails, icon: activity.activityOverview.headingWithIconDetails.icon } %}
        {% include "@components/activity-sidebar.twig" with { meta : activity.activityOverview.meta }  %}
      {% endblock %}
    {% endembed %}

  {% endblock %}
{% endembed %}
