{% embed "@modules/grid/grid-full.twig" %}
  {% block items %}
    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% embed "@modules/grid/grid-item-header-section.twig" %}
          {% block content %}
            {% embed "@modules/heading-with-icon.twig" with { headingWithIcon: { title: userProfile.headingWithIcon.title, subtitle: userProfile.headingWithIcon.subtitle } } %}
              {% block icon %}
                {% include "@elements/icons/icon-user.twig" %}
              {% endblock %}
            {% endembed %}
          {% endblock %}
        {% endembed %}
      {% endblock %}
    {% endembed %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include "@modules/section-text-with-icon.twig" with { textWithIcon: { title: userProfile.personalDetails } } %}
      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}

{% embed "@modules/grid/grid-halfs.twig" %}
  {% block items %}
    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include '@modules/activity-confirm-info.twig' with { activityConfirmInfo: { label: userProfile.labels.username, value: userProfile.username } } %}
      {% endblock %}
    {% endembed %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include '@modules/activity-confirm-info.twig' with { activityConfirmInfo: { label: userProfile.labels.email, value: userProfile.email } } %}
      {% endblock %}
    {% endembed %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include '@modules/activity-confirm-info.twig' with { activityConfirmInfo: { label: userProfile.labels.first_name, value: userProfile.first_name } } %}
      {% endblock %}
    {% endembed %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include '@modules/activity-confirm-info.twig' with { activityConfirmInfo: { label: userProfile.labels.surname, value: userProfile.surname } } %}
      {% endblock %}
    {% endembed %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include "@elements/buttons/button-call-to-action.twig" with { button: userProfile.editProfileButton } %}
      {% endblock %}
    {% endembed %}

  {% endblock %}
{% endembed %}
