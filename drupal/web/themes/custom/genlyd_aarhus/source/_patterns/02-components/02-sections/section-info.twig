{% embed "@layouts/grid-full.twig" %}
  {% block items %}

    {% embed "@layouts/grid-item.twig" %}
      {% block content %}

        {% embed "@layouts/grid-item-header-section-centered.twig" %}
          {% block items %}

            {% set headingWithIcon = { title: sectionInfo.title, subtitle: sectionInfo.subtitle, icon: { type: "bulletin", color: 'light' } } %}
            {% include "@modules/heading-with-icon.twig" %}

          {% endblock %}
        {% endembed %}

      {% endblock %}
    {% endembed %}

  {% endblock %}
{% endembed %}

{% embed "@layouts/grid-full.twig" %}
  {% block items %}

    {% embed "@layouts/grid-item.twig" %}
      {% block content %}

        {% for item in sectionInfo.items %}

          {% embed "@layouts/grid-item-header-section.twig" %}
            {% block content %}

              {% embed "@layouts/grid-two-thirds-reversed.twig" %}
                {% block items %}

                  {% embed "@layouts/grid-item.twig" %}
                    {% block content %}

                      {% embed "@modules/section-info.twig" %}

                        {% block icon %}
                          {% set icon = { type: "arrow", class: "is-small is-green-dark", color: "light" } %}
                          {% include "@elements/icons/icon.twig" with { icon: icon } %}
                        {% endblock %}
                        {% block title %}
                          {{ item.title }}
                        {% endblock %}

                      {% endembed %}

                    {% endblock %}
                  {% endembed %}

                  {% embed "@layouts/grid-item.twig" %}
                    {% block content %}

                      {{ item.description }}

                    {% endblock %}
                  {% endembed %}
                {% endblock %}
              {% endembed %}

            {% endblock %}
          {% endembed %}

        {% endfor %}

      {% endblock %}
    {% endembed %}

    {% include "@modules/call-to-action.twig" with { callToAction: callToAction } %}

  {% endblock %}
{% endembed %}
