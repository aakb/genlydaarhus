{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}

{%
  set classes = [
    'radio--input',
  ]
%}

{%
  set removeClasses = [
    'required',
  ]
%}

{% embed "@elements/forms/radio.twig" with { radio: { label: element['#title'], name: element['#name'] } } %}
  {% block content %}
    <input {{ attributes.removeClass(removeClasses).addClass(classes) }} />{{ children }}
  {% endblock %}
{% endembed %}
