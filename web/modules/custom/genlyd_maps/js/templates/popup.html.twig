<div class="popup">
  <div class="popup--close-button-wrapper">
    <span class="popup--close-button js-close-button">x</span>
  </div>
  <div class="popup--content-wrapper">
    <h3 class="popup--title">{{ title }}</h3>
    <div class="popup--metadata">
      <p class="popup--key">{{ Drupal.t('Date') }}</p>
      <p class="popup--value">{{ date }}</p>
    </div>
    <div class="popup--metadata">
      <p class="popup--key">{{ Drupal.t('Price') }}</p>
      <p class="popup--value">{{ price }}</p>
    </div>
    <div class="popup--metadata">
      <p class="popup--key">{{ Drupal.t('Address') }}</p>
      <p class="popup--value">{{ address }}</p>
    </div>
    <div class="popup--metadata">
      <p class="popup--key">{{ Drupal.t('Zipcode') }}</p>
      <p class="popup--value">{{ zipcode }}</p>
    </div>
    <div class="popup--link-wrapper">
      <a href="{{ url }}" target="_blank" class="popup--link">
        <div class="popup--link-text">{{ Drupal.t('Further information') }}</div>
      </a>
    </div>
  </div>
</div>
