{#
/**
 * @file
 * Theme override for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 */
#}

{% set addActivity = {
  headingWithIcon: {
    title: ("Hello " ~ user.account.name) | trans,
    subtitle: "Let us create an activity" | trans
  },
  chooseHeadline: {
    title: "Choose Headline and Description" | trans
  },
  helpBoxTitle: {
    title: "What is a good headline?" | trans,
    description: "En god overskrift er mange ting. Den kan være kort og tydelig (fx Vinsmagning i Dokk1). Den kan gøre en nysgerrig (fx Løgn og latin i sognegården) eller bruge ordspil (Luther og lagkage). Den kan love noget (Lær at binde din egen flue) eller være inviterende (Drop-ind tennis)" | trans
  },
  helpBoxBody: {
    title: "Hvad er en god beskrivelse?" | trans,
    description: "En god beskrivelse fortæller lidt mere om emnet eller temaet, og hvad i skal sammen. Fx: Vi lærer om de gode råvarer fra middelhavet og laver alle retter fra bunden. Eller: Tag på en frisk cykeltur ved Moesgård med en flok motionister, der nyder den friske luft og det gode humør. Vi cykler 5 km hver gang. Hvis det er et foredrag, kan man også skrive lidt om personen, der holder foredraget. Detaljer som, hvor og hvornår det foregår, kommer vi til senere. Det samme med hvor øvet, man skal være for at kunne deltage." | trans
  },
  signupRequired: {
    title: "Signup required" | trans
  },
  helpBoxSignup: {
    title: "Hvad er tilmeldingspligt?" | trans,
    description: "Hvis det er vigtigt at vide, hvor mange, der kommer til din aktivitet, fordi der fx skal laves mad eller betales billetter, så sæt kryds i tilmeldingspligt." | trans
  },
  participants: {
    title: "Participants" | trans,
  }
}
%}

{# Form #}

<form{{ attributes }}>
  {% set form = element %}

  {# Header #}

  {% embed "@modules/grid/grid-full.twig" %}
    {% block items %}
      {% embed "@modules/grid/grid-item.twig" %}
        {% block content %}
          {% embed "@modules/grid/grid-item-header-section.twig" %}
            {% block content %}

              {% embed "@modules/heading-with-icon.twig" with { headingWithIcon: addActivity.headingWithIcon } %}
                {% block icon %}
                  {% include "@elements/icons/icon-user.twig" %}
                {% endblock %}
              {% endembed %}

            {% endblock %}
          {% endembed %}
        {% endblock %}
      {% endembed %}
    {% endblock %}
  {% endembed %}

  {# End: Header #}

  {% embed "@modules/grid/grid-full.twig" %}
    {% block items %}

      {# Choose Headline and Description #}

      {% embed "@modules/grid/grid-item.twig" %}
        {% block content %}
          {% embed "@modules/grid/grid-item-header-section.twig" %}
            {% block content %}

              {% embed "@modules/text-with-icon.twig" with { textWithIcon: addActivity.chooseHeadline } %}
                {% block icon %}
                  {% include "@elements/icons/icon-arrow-dark-green-small.twig" %}
                {% endblock %}
              {% endembed %}

            {% endblock %}
          {% endembed %}
        {% endblock %}
      {% endembed %}

      {# Field Title #}

      {% embed "@modules/grid/grid-item.twig" %}
        {% block content %}

          {% if form %}
            {# Drupal #}
            {{ form.title }}
          {% else %}
            {# Pattern Lab #}
            {% include "@elements/forms/form-label.twig" with { formLabel: { label: "Title" } } %}
            {% include "@elements/forms/text-field.twig" with { type: "text", "name": "title" } %}
          {% endif %}

          {% include "@elements/forms/help-box.twig" with { helpBox: addActivity.helpBoxTitle } %}

        {% endblock %}
      {% endembed %}

      {# Field Body #}

      {% embed "@modules/grid/grid-item.twig" %}
        {% block content %}

          {% if form %}
            {# Drupal #}
            {{ form.body }}
          {% else %}
            {# Pattern Lab #}
            {% include "@elements/forms/textarea.twig" with { textArea: { name: "body" } } %}
          {% endif %}

          {% include "@elements/forms/help-box.twig" with { helpBox: addActivity.helpBoxBody } %}

        {% endblock %}
      {% endembed %}

      {# Signup required #}

      {% embed "@modules/grid/grid-item.twig" %}
        {% block content %}
          {% embed "@modules/grid/grid-item-header-section.twig" %}
            {% block content %}

              {% embed "@modules/text-with-icon.twig" with { textWithIcon: addActivity.signupRequired } %}
                {% block icon %}
                  {% include "@elements/icons/icon-arrow-dark-green-small.twig" %}
                {% endblock %}
              {% endembed %}

            {% endblock %}
          {% endembed %}
        {% endblock %}
      {% endembed %}


      {% embed "@modules/grid/grid-item.twig" %}
        {% block content %}

          {% if form %}
            {# Drupal #}
            {{ form.field_signup_required }}
          {% else %}
            {# Pattern Lab #}
            {% embed "@modules/grid/grid-fourths.twig" %}
              {% block items %}
                
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}            
                    {% include "@elements/forms/radio.twig" with { radio: { label: "Der er tilmeldingspligt", name: "signup_required" } } %}
                  {% endblock %}
                {% endembed %}
                
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {% include "@elements/forms/radio.twig" with { radio: { label: "Der er ikke tilmeldingspligt", name: "signup_not_required" } } %}
                  {% endblock %}
                {% endembed %}

              {% endblock %}
            {% endembed %}                    
          {% endif %}

          {% include "@elements/forms/help-box.twig" with { helpBox: addActivity.helpBoxSignup } %}

        {% endblock %}
      {% endembed %}

      {# Participants #}

      {% embed "@modules/grid/grid-item.twig" %}
        {% block content %}
          {% embed "@modules/grid/grid-item-header-section.twig" %}
            {% block content %}

              {% embed "@modules/text-with-icon.twig" with { textWithIcon: addActivity.participants } %}
                {% block icon %}
                  {% include "@elements/icons/icon-arrow-dark-green-small.twig" %}
                {% endblock %}
              {% endembed %}

            {% endblock %}
          {% endembed %}
        {% endblock %}
      {% endembed %}


      {% embed "@modules/grid/grid-item.twig" %}
        {% block content %}

          {% if form2 %}
            {# Drupal #}
            {{ form.field_entry_requirements }}
            {{ form.field_physical_requirements }}
          {% else %}
            {# Pattern Lab #}

            {# Entry Requirements #}

            {% embed "@modules/grid/grid-thirds.twig" %}
              {% block items %}

                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {% include "@elements/forms/radio.twig" with { radio: { label: "Kom som du er", name: "signup_required" } } %}
                  {% endblock %}
                {% endembed %}

                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {% include "@elements/forms/radio.twig" with { radio: { label: "Lettere øvet", name: "signup_not_required" } } %}
                  {% endblock %}
                {% endembed %}

                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {% include "@elements/forms/radio.twig" with { radio: { label: "Øvet", name: "signup_not_required" } } %}
                  {% endblock %}
                {% endembed %}

              {% endblock %}
            {% endembed %}


            {% embed "@elements/forms/fieldset.twig" %}
              {% block legend %}Hvilket niveau kræver det at deltage?{% endblock %}

              {% block content %}

                {% embed "@modules/grid/grid-thirds.twig" %}
                  {% block items %}

                    {% embed "@modules/grid/grid-item.twig" %}
                      {% block content %}
                        {% include "@elements/forms/radio.twig" with { radio: { label: "Ingen fysisk forudsætning", name: "signup_required" } } %}
                      {% endblock %}
                    {% endembed %}

                    {% embed "@modules/grid/grid-item.twig" %}
                      {% block content %}
                        {% include "@elements/forms/radio.twig" with { radio: { label: "I nogenlunde form", name: "signup_not_required" } } %}
                      {% endblock %}
                    {% endembed %}

                    {% embed "@modules/grid/grid-item.twig" %}
                      {% block content %}
                        {% include "@elements/forms/radio.twig" with { radio: { label: "I god form", name: "signup_not_required" } } %}
                      {% endblock %}
                    {% endembed %}

                  {% endblock %}
                {% endembed %}

              {% endblock %}
            {% endembed %}

          {% endif %}

          {% embed "@modules/grid/grid-fourths.twig" %}
            {% block items %}
              {% embed "@modules/grid/grid-item.twig" %}
                {% block content %}
                  {{ form.field_maximum_participants }}
                {% endblock %}
              {% endembed %}
            {% endblock %}
          {% endembed %}


        {% endblock %}
      {% endembed %}
 

            {% embed "@modules/grid/grid-full.twig" %}
              {% block items %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {% embed "@modules/grid/grid-item-header-section.twig" %}
                      {% block content %}
                        {% embed "@modules/text-with-icon.twig" with {textWithIcon: {title: "Helping with the activity" | trans, icon: { type: "arrow", color: "light", class: 'is-small' } } } %}
                        {% endembed %}
                      {% endblock %}
                    {% endembed %}
                  {% endblock %}
                {% endembed %}
              {% endblock %}
            {% endembed %}

            {% embed "@modules/grid/grid-full.twig" %}
              {% block items %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {{ form.field_help_needed }}
                  {% endblock %}
                {% endembed %}
              {% endblock %}
            {% endembed %}

            {% embed "@modules/grid/grid-full.twig" %}
              {% block items %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {% embed "@modules/grid/grid-item-header-section.twig" %}
                      {% block content %}
                        {% embed "@modules/text-with-icon.twig" with {textWithIcon: {title: "Categories" | trans, icon: { type: "arrow", color: "light", class: 'is-small' } } } %}
                        {% endembed %}
                      {% endblock %}
                    {% endembed %}
                  {% endblock %}
                {% endembed %}
              {% endblock %}
            {% endembed %}

            {% embed "@modules/grid/grid-full.twig" %}
              {% block items %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {{ form.field_categories }}
                  {% endblock %}
                {% endembed %}
              {% endblock %}
            {% endembed %}

            {% embed "@modules/grid/grid-full.twig" %}
              {% block items %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {% embed "@modules/grid/grid-item-header-section.twig" %}
                      {% block content %}
                        {% embed "@modules/text-with-icon.twig" with {textWithIcon: {title: "Upload an image" | trans, icon: { type: "arrow", color: "light", class: 'is-small' } } } %}
                        {% endembed %}
                      {% endblock %}
                    {% endembed %}
                  {% endblock %}
                {% endembed %}
              {% endblock %}
            {% endembed %}

            {% embed "@modules/grid/grid-full.twig" %}
              {% block items %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {% embed "@modules/grid/grid-halfs.twig" %}
                      {% block items %}
                        {% embed "@modules/grid/grid-item.twig" %}
                          {% block content %}
                            {{ form.field_image }}
                          {% endblock %}
                        {% endembed %}

                        {% embed "@modules/grid/grid-item.twig" %}
                          {% block content %}
                            {{ "Her kan du give din aktivitet et billede. Vælg upload billede og tilføj et billede fra din computer." | trans }}

                            {% include "@elements/forms/help-box.twig" with { helpBox: { title: "Hvad er et godt billede?" | trans, description: "Et godt billede er lyst, og det er i en god opløsning (dvs. det er taget eller lavet i en ordentlig størrelse, så billedet er klart). Et godt billede fortæller andre, om der er aktivitet(fx. madlavning, brætspil, motion), eller hvilket emne det drejer sig om (fx. et historisk billede til et foredrag om 1864 eller hvem, der holder foredraget)." | trans } } %}
                          {% endblock %}
                        {% endembed %}
                      {% endblock %}
                    {% endembed %}
                  {% endblock %}
                {% endembed %}
              {% endblock %}
            {% endembed %}

            {% embed "@modules/grid/grid-full.twig" %}
              {% block items %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {% embed "@modules/grid/grid-item-header-section.twig" %}
                      {% block content %}
                        {% embed "@modules/text-with-icon.twig" with {textWithIcon: {title: "Practical information" | trans, icon: { type: "arrow", color: "light", class: 'is-small' } } } %}
                        {% endembed %}
                      {% endblock %}
                    {% endembed %}
                  {% endblock %}
                {% endembed %}
              {% endblock %}
            {% endembed %}

            {% embed "@modules/grid/grid-halfs.twig" %}
              {% block items %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {{ form.field_date }}
                  {% endblock %}
                {% endembed %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {{ form.field_price }}
                  {% endblock %}
                {% endembed %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {{ form.field_time_start }}
                  {% endblock %}
                {% endembed %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {{ form.field_time_end }}
                  {% endblock %}
                {% endembed %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {{ form.field_zipcode }}
                  {% endblock %}
                {% endembed %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {{ form.field_area }}
                  {% endblock %}
                {% endembed %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {{ form.field_address }}
                  {% endblock %}
                {% endembed %}

                {# @TODO: Contact information - just user? #}
              {% endblock %}
            {% endembed %}

            {% embed "@modules/grid/grid-full.twig" %}
              {% block items %}
                {% embed "@modules/grid/grid-item.twig" %}
                  {% block content %}
                    {{ form.actions.submit }}
                    {{ form.actions.publish }}
                  {% endblock %}
                {% endembed %}

              {% endblock %}
            {% endembed %}


    {% endblock %}
  {% endembed %}

  {{ form.form_build_id }}
  {{ form.form_token }}
  {{ form.form_id }}
</form>

{# End: Form #}
