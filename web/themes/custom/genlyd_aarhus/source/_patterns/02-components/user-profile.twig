{% embed "@modules/grid/grid-full.twig" %}
  {% block items %}
    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% embed "@modules/grid/grid-item-header-section.twig" %}
          {% block content %}
            {% include '@modules/heading-with-icon.twig' with { headingWithIcon: { title: userProfile.headingWithIcon.title, subtitle: userProfile.headingWithIcon.subtitle, icon: { type: "create", color: 'light' } } } %}
          {% endblock %}
        {% endembed %}
      {% endblock %}
    {% endembed %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}

        {% include "@modules/section-text-with-icon.twig" with { textWithIcon: { title: userProfile.personalDetails } } %}

      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}

{% embed "@modules/grid/grid-halfs.twig" %}
  {% block items %}
    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include '@modules/activity-confirm-info.twig' with { activityConfirmInfo: { label: 'Username' | trans, value: userProfile.username } } %}
      {% endblock %}
    {% endembed %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include '@modules/activity-confirm-info.twig' with { activityConfirmInfo: { label: 'Email' | trans, value: userProfile.email } } %}
      {% endblock %}
    {% endembed %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include '@modules/activity-confirm-info.twig' with { activityConfirmInfo: { label: 'First name' | trans, value: userProfile.first_name } } %}
      {% endblock %}
    {% endembed %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include '@modules/activity-confirm-info.twig' with { activityConfirmInfo: { label: 'Surname' | trans, value: userProfile.surname } } %}
      {% endblock %}
    {% endembed %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% include "@elements/buttons/button-call-to-action.twig" with { button: userProfile.editProfileButton } %}
      {% endblock %}
    {% endembed %}

  {% endblock %}
{% endembed %}

{% embed "@modules/grid/grid-full.twig" %}
  {% block items %}
    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}

      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}
