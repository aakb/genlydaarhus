{% embed "@templates/page.twig" %}
  {% block main %}

    {% if headingWithIcon %}
      {% embed "@modules/grid/grid-full.twig" %}
        {% block items %}
          {% embed "@modules/grid/grid-item.twig" %}
            {% block content %}
              {% embed "@modules/grid/grid-item-header-section.twig" %}
                {% block content %}
                  {% embed "@modules/grid/grid-halfs.twig" %}
                    {% block items %}
                      {% embed "@modules/grid/grid-item.twig" %}
                        {% block content %}
                          {% include "@modules/heading-with-icon.twig" %}
                        {% endblock %}
                      {% endembed %}
                      {% embed "@modules/grid/grid-item.twig" %}
                        {% block content %}
                          {% include "@elements/buttons/button-call-to-action.twig" with { button: { title: "Show map" }, jsClass: "js-maps-switch" } %}
                        {% endblock %}
                      {% endembed %}
                    {% endblock %}
                  {% endembed %}
                {% endblock %}
              {% endembed %}
            {% endblock %}
          {% endembed %}
        {% endblock %}
      {% endembed %}
    {% endif %}

    {% embed "@modules/grid/grid-fourths.twig" %}
      {% block items %}
        {% embed "@modules/grid/grid-item.twig" %}
          {% block content %}
            {% include "@elements/buttons/button-call-to-action.twig" with { button: { title: "Show filters" }, jsClass: "js-filters-toggle" } %}
          {% endblock %}
        {% endembed %}
      {% endblock %}
    {% endembed %}

    {% embed "@modules/grid/grid-full.twig" %}
      {% block items %}
        {% embed "@modules/grid/grid-item.twig" %}
          {% block content %}
            {% include "@modules/filters.twig" %}
          {% endblock %}
        {% endembed %}
      {% endblock %}
    {% endembed %}

    <div class="js-map-tab-view">List</div>
    <div class="js-map-tab-map">Map</div>

  {% endblock %}
{% endembed %}
