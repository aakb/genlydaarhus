{#
/**
 * @file
 * Display of info section.
 */
#}

{% set sectionInfo = {
    "title": title,
    "subtitle": subtitle,
    "items": [
      {
        "title": question_1, description: answer_1
      },
      {
        "title": question_2, description: answer_2
      },
      {
        "title": question_3, description: answer_3
      }
    ]
  }
%}

{% set callToAction = {
    "text": call_to_action_text,
    "button": {
      "title": call_to_action_button_text,
      "href": call_to_action_button_link
    }
  }
%}

{% embed "@layouts/container-constrained-dark.twig" %}
  {% block content %}
    {% include "@components/section-info.twig" with { "sectionInfo": sectionInfo } %}
  {% endblock %}
{% endembed %}
