{% extends "templates-page" %}
{% block hero %}
  {% include "modules-hero" %}
{% endblock %}
{% block main %}
  <div class="container has-spacing">
    {% include "modules-activity-search" with { activitySearch: home.activitySearch, headingMeta: home.activitySearch.headingMeta } %}
    
    <div class="grid">
      <div class="grid--inner">
        {% for item in activities %}
          <article class="grid--item">
            {% include "modules-card-activity" with { cardActivity: item } %}
          </article>
        {% endfor %}
      </div>
    </div>

    <div class="flex center">
      {% include "elements-button" with { button: home.seeAllButton } %}
    </div>

  </div>
  
  <div class="section is-black-lightest">
    <div class="container has-spacing">
      {% include "components-guidelines" %}
    </div>
  </div>
  <div class="section has-padding is-black-lighter">
    {% include 'modules-call-to-action' %}
  </div>
{% endblock %}