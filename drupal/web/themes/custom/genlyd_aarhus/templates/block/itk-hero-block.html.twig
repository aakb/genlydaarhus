{#
/**
 * @file
 * Display of itk_hero header block
 *
 * Available variables:
 * - variables: Holds variables from the itk_hero content page.
 */
#}

{% set hero = {
  "lead": variables.itk_hero_lead,
  "sub": variables.itk_hero_sub,
  "image": variables.itk_hero_image_url,
  "cta_button":  {
    "title": variables.itk_hero_cta_button,
    "href": variables.itk_hero_cta_link,
    "class": "is-cta is-full-width"
  },
  "button":  {
    "title": variables.itk_hero_button,
    "href": variables.itk_hero_link,
    "class": "is-full-width"
  }
}
%}

{% include "@modules/hero.twig" with {hero : hero} %}
