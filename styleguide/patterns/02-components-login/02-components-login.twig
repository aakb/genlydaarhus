{% embed "@layouts/grid-full.twig" %}
  {% block items %}
    {% embed "@layouts/grid-item.twig" %}
      {% block content %}
        <div class="l-heading-section">
          {% include "@modules/heading-with-icon.twig" with { headingWithIcon: login.headingWithIcon, icon: login.headingWithIcon.icon } %}
        </div>
      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}


<div class="l-section has-bottom-margin">
  {% include "@modules/social-buttons.twig" with { socialButtons: login.socialButtons } %}
</div>
<div class="l-section has-no-margin">
  {% include "@modules/text-with-icon.twig" with { textWithIcon: login.textWithIcon, icon: login.textWithIcon.icon } %}
</div>

{% embed "@layouts/grid-halfs.twig" %}
  {% block items %}
    {% embed "@layouts/grid-item.twig" %}
      {% block content %}
        <div class="l-section has-bottom-margin is-tight">
          {% include "@elements/forms/form-label.twig" with { formLabel: { label: "Brugernavn" } } %}
          {% include "@elements/forms/text-field.twig" with {'type': 'text', 'name': 'username' } %}
        </div>
        <div class="l-section has-bottom-margin is-tight">
          {% include "@elements/forms/form-label.twig" with { formLabel: { label: "Adgangskode" } } %}
          {% include "@elements/forms/text-field.twig" with {'type': 'password', 'name': 'password' } %}
        </div>
        {% include "@elements/forms/checkbox.twig" with {'checkbox': { "label": "Husk mig", class: "borderless" } } %}
        <div class="l-section has-bottom-margin is-tight">
          <p><a href="#">Glemt adgangskode?</a></p>
        </div>
        <div class="l-section has-no-margin is-tight">
          <div class="layout inline-block">
            {% include "@elements/buttons/button-call-to-action.twig" with { button: login.loginButton } %}
          </div>
          <div class="layout inline-block">
            {% include "@elements/buttons/button-secondary-dark.twig" with { button: login.noAccountButton } %}
          </div>
        </div>
      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}

<form{{ attributes.removeClass('user-login-form') }}>
  {{ children }}
</form>
