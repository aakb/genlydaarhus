{% embed "@layouts/page.twig" with { page: page, is_front: is_front } %}

  {% block hero %}
    {% if page.hero %}
      {# Render Drupal block in hero region #}
      {{ page.hero }}
    {% else %}
      {# Render Pattern Lab #}
      {% include "@modules/hero.twig" %}
    {% endif %}
  {% endblock %}

  {% block main %}
    {% block content %}
      {% if page.content %}
        {# Render Drupal block in hero region #}
        {{ page.content }}
      {% else %}
        {# Render Pattern Lab #}
        {% include "@components/activities.twig" %}
        {% embed "@layouts/container-constrained-dark.twig" %}
          {% block content %}
            {% include "@components/section-info.twig" %}
          {% endblock %}
        {% endembed %}
        {% include "@components/activities.twig" %}
        {% embed "@layouts/container-constrained-dark.twig" %}
          {% block content %}
            {% include "@components/section-info.twig" %}
          {% endblock %}
        {% endembed %}
      {% endif %}
    {% endblock %}
  {% endblock %}
{% endembed %}
