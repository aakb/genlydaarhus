{#
/**
 * @file
 * Display of itk_footer
 *
 * Available variables:
 * - itk_footer_title: The heading.
 * - itk_footer_text: Rendered html of the footer.
 */
#}
<div class="footer">
    {% if itk_footer_title %}
        <h3>{{ itk_footer_title }}</h3>
    {% endif %}
    {% if itk_footer_text %}
        <div class="footer--text">
            {{ itk_footer_text }}
        </div>
    {% endif %}
</div>
