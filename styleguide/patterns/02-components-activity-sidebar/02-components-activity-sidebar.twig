<div class="activity-sidebar">
    <div class="l-cols">
      <div class="l-col half all activity-sidebar--col">
        {% include "@elements/activity-info.twig" with { activityInfo: { meta: meta.date_label, data: meta.date }} %}
      </div>
      <div class="l-col half all activity-sidebar--col">
        {% include "@elements/activity-info.twig" with { activityInfo: { meta: meta.price_label, data: meta.price }} %}
      </div>
    </div>
    <div class="l-cols">
      <div class="l-col half all activity-sidebar--col">
        {% include "@elements/activity-info.twig" with { activityInfo: { meta: meta.start_time_label, data: meta.start_time }} %}
      </div>
      <div class="l-col half all activity-sidebar--col">
        {% include "@elements/activity-info.twig" with { activityInfo: { meta: meta.end_time_label, data: meta.end_time }} %}
      </div>
    </div>
    <div class="l-cols">
      <div class="l-col activity-sidebar--col">
        {% include "@elements/activity-info.twig" with { activityInfo: { meta: meta.address_label, data: meta.address }} %}
      </div>
    </div>
    <div class="l-cols">
      <div class="l-col half all activity-sidebar--col">
        {% include "@elements/activity-info.twig" with { activityInfo: { meta: meta.owner_label, data: meta.owner }} %}
      </div>
      <div class="l-col half all activity-sidebar--col">
        {% include "@elements/activity-info.twig" with { activityInfo: { meta: meta.number_of_participants_label, data: meta.number_of_participants }} %}
      </div>
    </div>

    <div class="activity-sidebar--signup">
      {% include '@elements/buttons/button-call-to-action.twig' with { button: meta.signupButton } %}
    </div>
    <div class="activity-sidebar--social-share">
      {% include '@modules/social-share.twig' %}
    </div>
</div>