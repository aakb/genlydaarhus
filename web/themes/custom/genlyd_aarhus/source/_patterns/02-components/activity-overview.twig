{% embed "@modules/grid/grid-full.twig" %}
  {% block items %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}

        {% include "@modules/activity-hero.twig" with { activityHero: activity.activityHero } %}

      {% endblock %}
    {% endembed %}

  {% endblock %}
{% endembed %}

{% embed "@modules/grid/grid-two-thirds.twig" %}
  {% block items %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}

        {% embed "@modules/grid/grid-full.twig" %}
          {% block items %}

            {% embed "@modules/grid/grid-item.twig" %}
              {% block content %}

                {% include "@modules/section-text-with-icon.twig" with { textWithIcon: { title: activity.activityOverview.headingWithIconDescription.title }, iconName: 'bulletin' } %}

              {% endblock %}
            {% endembed %}

            {% embed "@modules/grid/grid-item.twig" %}
              {% block content %}
                {% for category in activity.activityOverview.categories %}
                  {% include "@elements/category.twig" with { category: { text: category } } %}
                {% endfor %}
              {% endblock %}
            {% endembed %}

            {% embed "@modules/grid/grid-item.twig" %}
              {% block content %}
                {{ activity.activityOverview.body }}

                {% include "@components/important-info.twig" with { info: activity.activityOverview.info } %}
              {% endblock %}
            {% endembed %}

            {% if activity.activityOverview.signedUpUsers.users %}
              {% embed "@modules/grid/grid-item.twig" %}
                {% block content %}
                  {% include "@modules/section-text-with-icon.twig" with { textWithIcon: { title: activity.activityOverview.signedUpUsers.title }, iconName: 'bulletin' } %}

                  {% include "@modules/signed-up-users.twig" with { users: activity.activityOverview.signedUpUsers.users } %}
                {% endblock %}
              {% endembed %}
            {% endif %}

          {% endblock %}
        {% endembed %}

      {% endblock %}
    {% endembed %}

    {% embed "@modules/grid/grid-item.twig" %}
      {% block content %}
        {% embed "@modules/grid/grid-full.twig" %}
          {% block items %}

            {% embed "@modules/grid/grid-item.twig" %}
              {% block content %}

                {% include "@modules/section-text-with-icon.twig" with { textWithIcon: { title: activity.activityOverview.headingWithIconDetails.title }, iconName: 'bulletin' } %}

              {% endblock %}
            {% endembed %}

            {% embed "@modules/grid/grid-item.twig" %}
              {% block content %}

                {% include "@components/activity-sidebar.twig" with { meta : activity.activityOverview.meta }  %}

              {% endblock %}
            {% endembed %}
          {% endblock %}
        {% endembed %}
      {% endblock %}
    {% endembed %}

  {% endblock %}
{% endembed %}
