{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}

{%
  set classes = [
    'is-cta',
  ]
%}

{%
  set removeClasses = [
    'form-submit',
  ]
%}

{% embed "@layouts/grid-item-section.twig" %}
  {% block content %}

    {% include "@elements/buttons/button-input-call-to-action.twig" with { buttonAttributes: attributes.removeClass(removeClasses).addClass(classes)} %}

  {% endblock %}
{% endembed %}